{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "pythonVersion": "3.10"
      }
    },
    {
      "src": "public/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/quantum.py"
    },
    {
      "src": "/(.*)",
      "dest": "public/index.html"
    }
  ]
}
